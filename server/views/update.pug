extends ./layout.pug
block style
	link(href='https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css' rel='stylesheet')
	script(src='https://code.jquery.com/jquery-3.5.1.min.js')
	script(src='https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js')
	link(href='https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css' rel='stylesheet')
	script(src='https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js')

block content
	form.form(method='post' action='/update').text-dark
		input(type='hidden' name='user_id' value=user)
		input(type='hidden' name='id' value=`${results[0].id}`)
		input.title(type='text' name='title' value=`${results[0].title}` placeholder=`${results[0].title}` required='')
		textarea#summernote(name='description') #{results[0].description}
		button.w-100.btn.btn-lg.btn-primary(type='submit') 수정
	script.
		$(document).ready(function() {
				$('#summernote').summernote();
		});